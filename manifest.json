{
  "manifest_version": 3,
  "name": "Download Router",
  "version": "1.0",
  "description": "Automatically routes downloads to specific folders based on rules.",
  "permissions": [
    "downloads",
    "storage",
    "notifications",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.css", "overlay.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
